{
  "name": "@frontend-mcp-kit/test-toolkit",
  "version": "0.0.1",
  "description": "MCP server for frontend test automation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "test-toolkit": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "keywords": [
    "mcp",
    "testing",
    "automation",
    "frontend",
    "vitest",
    "jest",
    "react",
    "vue"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@typescript-eslint/typescript-estree": "^8.52.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@frontend-mcp-kit/eslint-config": "workspace:*",
    "@frontend-mcp-kit/prettier-config": "workspace:*",
    "@frontend-mcp-kit/typescript-config": "workspace:*",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
